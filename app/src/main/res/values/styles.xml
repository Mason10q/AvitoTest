<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParentWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContentMatchParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParent0dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="WrapContent0dp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>


    <style name="Text" parent="MatchParentWrapContent"/>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/kinopoisk_lc</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Additional">
        <item name="android:textSize">@dimen/additional_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Additional.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Additional.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Additional.Silver">
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="BottomDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalSheet</item>
    </style>

    <style name="ModalSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog_filter</item>
    </style>


</resources>